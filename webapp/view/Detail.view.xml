<mvc:View
  controllerName="POC-CHECKSAP.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  displayBlock="true">

  <Page title="Detalhes do Invoice" showNavButton="true" navButtonPress="onNavBack">
    <VBox class="sapUiMediumMargin">

      <Table inset="false" showNoData="false">
        <columns>
          <Column width="30%">
            <Text text="TÃ­tulo" />
          </Column>
          <Column width="20%">
            <Text text="Invoice ID" />
          </Column>
          <Column width="20%">
            <Text text="User ID" />
          </Column>
          <Column width="20%">
            <Text text="Completed" />
          </Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{/title}" />
              <Text text="{/id}" />
              <Text text="{/userId}" />
              <ObjectStatus
                state="{= ${/completed} ? 'Success' : 'Error' }"
                text="{= ${/completed} ? 'Yes' : 'No' }" />
            </cells>
          </ColumnListItem>
        </items>

      </Table>

    </VBox>
  </Page>
</mvc:View>
